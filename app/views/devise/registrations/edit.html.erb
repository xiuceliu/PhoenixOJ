<% content_for :overview do %>
  <div class="container">
    <h1>User Profile , 红红火火恍恍惚惚哈哈嘿嘿</h1> 
  </div>
<% end %>  
<div class="page-header"></div>

<h2>Edit <%= resource_name.to_s.humanize %></h2></br>

<div class="form-horizontal">
        
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="control-group"><label class="control-label">Username: </label>
  <div class="controls"><%= f.text_field :username, "style" => "background-color:#f5f5f5;
  cursor: not-allowed" %></div></div>

  <div class="control-group"><label class="control-label">Email: </label>
  <div class="controls"><%= f.text_field :email, autocomplete: "off" %></div></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="control-group"><label class="control-label">Current Password: </label>
  <div class="controls"><%= f.password_field :current_password, autocomplete: "off" %></div></div>

  <div class="control-group"><label class="control-label">New Password: </label>
  <div class="controls"><%= f.password_field :password, autocomplete: "off", :placeholder => "Leave blank if not changing it" %></div></div>

  <div class="control-group"><label class="control-label">Repeat Password: </label>
  <div class="controls"><%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Leave blank if not changing it" %></div></div>

  <div class="actions">
    <%= f.submit "Update", class: "btn" %>
    <%= link_to "Back", '/', class: "btn" %>
  </div>
<% end %>

      </form>
