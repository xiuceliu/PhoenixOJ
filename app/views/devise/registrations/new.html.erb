<% content_for :overview do %>
  <div class="container">
    <h1>User Profile , 红红火火恍恍惚惚哈哈嘿嘿</h1> 
  </div>
<% end %>
<div class="page-header"></div>

<h2>Sign up</h2></br>


<div class="form-horizontal">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="controls-group">
    <label class="control-label">Username: </label>
    <div class="controls">
      <%= f.text_field :username, autofocus: true, class: "input-medium", placeholder: "Username" %>
    </div>
  </div> </br>

  <div class="controls-group">
    <label class="control-label">Email: </label>
    <div class="controls">
      <%= f.text_field :email, class: "input-medium", placeholder: "Email" %>
    </div>
  </div> </br>

  <div class="controls-group">
    <label class="control-label">Password: <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></label>
    <div class="controls">
      <%= f.password_field :password, class: "input-medium", placeholder: "Password"%>
    </div>
  </div> </br>

  <div class="controls-group">
    <label class="control-label">Password Confirmation: </label>
    <div class="controls">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-medium", placeholder: "Repeat Password" %>
    </div>
  </div> </br>

  <div class="controls">
  	<%= f.submit "Sign up", :class => 'btn' %>
	</div>
<% end %>

</div>